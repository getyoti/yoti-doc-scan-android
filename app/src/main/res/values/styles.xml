<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Override Yoti fonts style to use GothicA1 -->
    <style name="Yoti.v3.Font.DisplayBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Yoti.v3.Font.DisplayRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Yoti.v3.Font.TextBold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Yoti.v3.Font.TextRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Yoti.v3.Font.TextRegular.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">sans-serif</item>
        <item name="additionalTextFontFamily">sans-serif</item>
    </style>

    <style name="Yoti.v3.Font.TextBold.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="additionalTextFontFamily">sans-serif</item>
    </style>
    <!-- END YOTI STYLES OVERRIDE -->

</resources>
